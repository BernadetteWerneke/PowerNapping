<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".ui.authentication.LoginFragment">

    <Button
        android:id="@+id/login_signup_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#E6E5DD"
        android:text="sign up"
        android:textColor="@color/pn_aubergine_ori"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/login_signin_button"
        app:layout_constraintStart_toStartOf="@+id/login_signin_button"
        app:layout_constraintTop_toBottomOf="@+id/login_signin_button" />

    <ImageView
        android:id="@+id/login_logo_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:src="@drawable/logopn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_EmailAddress_text"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="90dp"
        android:background="@color/design_default_color_background"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingLeft="14sp"
        android:textColor="@color/pn_aubergine_ori"
        android:textColorHint="@color/pn_aubergine_ori"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/login_logo_imageview"
        app:layout_constraintStart_toStartOf="@+id/login_logo_imageview"
        app:layout_constraintTop_toBottomOf="@+id/login_logo_imageview" />

    <EditText
        android:id="@+id/login_password_text"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@color/design_default_color_background"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="14sp"
        android:textColor="@color/pn_aubergine_ori"
        android:textColorHint="@color/pn_aubergine_ori"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/login_EmailAddress_text"
        app:layout_constraintStart_toStartOf="@+id/login_EmailAddress_text"
        app:layout_constraintTop_toBottomOf="@+id/login_EmailAddress_text" />

    <Button
        android:id="@+id/login_signin_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/pn_gold_ori"
        android:text="sign in"
        android:textColor="@color/pn_aubergine_ori"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/login_password_text"
        app:layout_constraintStart_toStartOf="@+id/login_password_text"
        app:layout_constraintTop_toBottomOf="@+id/login_password_text" />

</androidx.constraintlayout.widget.ConstraintLayout>